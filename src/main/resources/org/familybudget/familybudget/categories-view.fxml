<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="10"
      prefWidth="520"
      prefHeight="460"
      style="-fx-background-color: #F0F2F5;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.CategoriesController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <!-- Внутренняя карточка -->
        <VBox alignment="TOP_CENTER"
              spacing="15"
              prefWidth="480"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 16;
                     -fx-padding: 18 20 20 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 4);
                     -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label text="Категории семьи"
                   style="-fx-text-fill: #222222;">
                <font>
                    <Font name="Segoe UI Semibold" size="20"/>
                </font>
            </Label>

            <Label text="Просмотр, добавление, переименование и удаление категорий"
                   wrapText="true"
                   style="-fx-text-fill: #777777; -fx-font-size: 11;"/>

            <!-- Список категорий -->
            <ListView fx:id="categoriesList"
                      prefHeight="230"
                      maxWidth="440"
                      style="-fx-background-color: #F7F7F7;
                             -fx-control-inner-background: #F7F7F7;
                             -fx-text-fill: #222222;
                             -fx-background-radius: 10;
                             -fx-border-color: #DDDDDD;
                             -fx-border-radius: 10;"/>

            <!-- Добавление новой категории -->
            <HBox spacing="8" maxWidth="440">
                <TextField fx:id="newCategoryField"
                           promptText="Новая категория"
                           HBox.hgrow="ALWAYS"
                           style="-fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #999999;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>

                <Button text="Добавить"
                        onAction="#onAddCategoryClick"
                        style="-fx-background-color: #4C6FFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 6 16;
                               -fx-font-size: 12;"/>
            </HBox>

            <!-- Переименование / удаление выбранной -->
            <HBox spacing="8" maxWidth="440">
                <TextField fx:id="renameCategoryField"
                           promptText="Новое имя для выбранной категории"
                           HBox.hgrow="ALWAYS"
                           style="-fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #999999;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>

                <Button text="Переименовать"
                        onAction="#onRenameCategoryClick"
                        style="-fx-background-color: #3FAF6C;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 6 16;
                               -fx-font-size: 12;"/>

                <Button text="Удалить"
                        onAction="#onDeleteCategoryClick"
                        style="-fx-background-color: #D9534F;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 6 16;
                               -fx-font-size: 12;"/>
            </HBox>

            <!-- Статус и закрытие -->
            <HBox spacing="10"
                  alignment="CENTER_RIGHT"
                  maxWidth="440">

                <Label fx:id="statusLabel"
                       style="-fx-text-fill: #D32F2F; -fx-font-size: 11;"
                       text=""/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button text="Закрыть"
                        onAction="#onCloseClick"
                        style="-fx-background-color: #E0E0E0;
                               -fx-background-radius: 999;
                               -fx-text-fill: #333333;
                               -fx-font-weight: bold;
                               -fx-padding: 6 16;
                               -fx-font-size: 12;"/>
            </HBox>

        </VBox>
    </children>
</VBox>
