<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER"
      spacing="10"
      prefWidth="420"
      prefHeight="340"
      style="-fx-background-color: #121212;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.CategoriesController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <Label text="Категории семьи"
               style="-fx-text-fill: #FFFFFF;">
            <font>
                <Font name="Segoe UI Semibold" size="20"/>
            </font>
        </Label>

        <ListView fx:id="categoriesList"
                  prefHeight="200"
                  prefWidth="360"
                  style="-fx-background-color: #1E1E1E;
                         -fx-control-inner-background: #1E1E1E;
                         -fx-text-fill: #FFFFFF;
                         -fx-background-radius: 8;"/>

        <Label text="Новая категория"
               style="-fx-text-fill: #CCCCCC;"/>

        <HBox spacing="8">
            <TextField fx:id="newCategoryField"
                       prefWidth="260"/>
            <Button text="Добавить"
                    onAction="#onAddCategoryClick"
                    style="-fx-background-color: #4C6FFF;
                           -fx-background-radius: 8;
                           -fx-text-fill: white;
                           -fx-padding: 5 12;"/>
        </HBox>

        <Label fx:id="statusLabel"
               style="-fx-text-fill: #FF7070; -fx-font-size: 11;"
               text=""/>

    </children>
</VBox>
