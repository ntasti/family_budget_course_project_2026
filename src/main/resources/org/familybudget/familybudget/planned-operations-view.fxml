<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.shape.SVGPath?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.PlannedOperationsController"
      spacing="10"
      alignment="TOP_CENTER"
      prefWidth="520"
      prefHeight="420"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>
        <HBox alignment="CENTER_RIGHT"
              prefWidth="480"
              spacing="10">

            <Button onAction="#onAddNewClick"
                    style="
                -fx-background-color: #4CAF50;
                -fx-background-radius: 50;
                -fx-min-width: 32;
                -fx-min-height: 32;
                -fx-max-width: 32;
                -fx-max-height: 32;
                -fx-padding: 0;
            ">
                <graphic>
                    <SVGPath content="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16
                           M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"
                             style="-fx-fill: #fff; -fx-scale-x: 1.0; -fx-scale-y: 1.0;"/>
                </graphic>
            </Button>

        </HBox>

        <Label text="Здесь видно, какие операции будут списываться автоматически."
               wrapText="true"
               style="-fx-text-fill: #777; -fx-font-size: 11;"/>

        <TableView fx:id="plannedTable"
                   prefWidth="480"
                   prefHeight="300"
                   style="-fx-background-color: white;
                          -fx-border-color: #DDDDDD;
                          -fx-border-radius: 10;
                          -fx-background-radius: 10;">

            <columns>
                <TableColumn fx:id="colType"        text="Тип"        prefWidth="70"/>
                <TableColumn fx:id="colCategoryId"  text="Категория"  prefWidth="80"/>
                <TableColumn fx:id="colAmount"      text="Сумма"      prefWidth="80"/>
                <TableColumn fx:id="colDateStart"   text="Дата"       prefWidth="90"/>
                <TableColumn fx:id="colTime"        text="Время"      prefWidth="70"/>
                <TableColumn fx:id="colPeriod"      text="Период"     prefWidth="90"/>
                <TableColumn fx:id="colImportant"   text="Важно"      prefWidth="60"/>
            </columns>
        </TableView>

        <!-- Кнопки управления -->
        <HBox spacing="8" alignment="CENTER_RIGHT" prefWidth="480">

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Обновить"
                    onAction="#onRefreshClick"
                    style="-fx-background-color: #4C6FFF;
                   -fx-background-radius: 999;
                   -fx-text-fill: white;
                   -fx-font-family: 'Segoe UI';
                   -fx-font-weight: bold;
                   -fx-padding: 6 16;
                   -fx-font-size: 12;"/>

            <Button text="Удалить выбранное"
                    onAction="#onDeleteClick"
                    style="-fx-background-color: #D9534F;
                   -fx-background-radius: 999;
                   -fx-text-fill: white;
                   -fx-font-family: 'Segoe UI';
                   -fx-font-weight: bold;
                   -fx-padding: 6 16;
                   -fx-font-size: 12;"/>

            <Button text="Закрыть"
                    onAction="#onCloseClick"
                    style="-fx-background-color: #E0E0E0;
                   -fx-background-radius: 999;
                   -fx-text-fill: #333333;
                   -fx-font-family: 'Segoe UI';
                   -fx-font-weight: bold;
                   -fx-padding: 6 16;
                   -fx-font-size: 12;"/>
        </HBox>


        <Label fx:id="statusLabel"
               style="-fx-text-fill: #D32F2F; -fx-font-size: 11;"
               text=""/>

    </children>
</VBox>
