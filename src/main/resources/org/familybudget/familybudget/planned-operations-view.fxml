<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.PlannedOperationsController"
      spacing="10"
      alignment="TOP_CENTER"
      prefWidth="520"
      prefHeight="420"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <Label text="Запланированные списания"
               style="-fx-text-fill: #222;">
            <font>
                <Font name="Segoe UI Semibold" size="20"/>
            </font>
        </Label>

        <Label text="Здесь видно, какие операции будут списываться автоматически."
               wrapText="true"
               style="-fx-text-fill: #777; -fx-font-size: 11;"/>

        <TableView fx:id="plannedTable"
                   prefWidth="480"
                   prefHeight="300"
                   style="-fx-background-color: white;
                          -fx-border-color: #DDDDDD;
                          -fx-border-radius: 10;
                          -fx-background-radius: 10;">

            <columns>
                <TableColumn fx:id="colType"        text="Тип"        prefWidth="70"/>
                <TableColumn fx:id="colCategoryId"  text="Категория"  prefWidth="80"/>
                <TableColumn fx:id="colAmount"      text="Сумма"      prefWidth="80"/>
                <TableColumn fx:id="colDateStart"   text="Дата"       prefWidth="90"/>
                <TableColumn fx:id="colTime"        text="Время"      prefWidth="70"/>
                <TableColumn fx:id="colPeriod"      text="Период"     prefWidth="90"/>
                <TableColumn fx:id="colImportant"   text="Важно"      prefWidth="60"/>
            </columns>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT" prefWidth="480">
            <Button text="Обновить"
                    onAction="#onRefreshClick"
                    style="-fx-background-color: #4C6FFF;
                           -fx-background-radius: 999;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 5 14;"/>

            <Button text="Удалить выбранное"
                    onAction="#onDeleteClick"
                    style="-fx-background-color: #FF4B55;
                           -fx-background-radius: 999;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 5 14;"/>

            <Button text="Закрыть"
                    onAction="#onCloseClick"
                    style="-fx-background-color: #E0E0E0;
                           -fx-background-radius: 999;
                           -fx-text-fill: #333;
                           -fx-font-weight: bold;
                           -fx-padding: 5 14;"/>
        </HBox>

        <Label fx:id="statusLabel"
               style="-fx-text-fill: #D32F2F; -fx-font-size: 11;"
               text=""/>

    </children>
</VBox>
