                    </graphic>
                </Button>

                <Button fx:id="analyticsButton"
                        maxWidth="220"
                        prefHeight="41"
                        onAction="#onOpenAnalyticsClick"
                        graphicTextGap="8"
                        style="-fx-background-color: #FFFFFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: #333333;
                               -fx-font-weight: bold;
                               -fx-padding: 7 14;
                               -fx-font-size: 13;"
                        text="Аналитика"/>

                <Button fx:id="accountButton"
                        maxWidth="220"
                        prefHeight="41"
                        onAction="#onOpenAccountClick"
                        graphicTextGap="8"
                        style="-fx-background-color: #FFFFFF;
               -fx-background-radius: 999;
               -fx-text-fill: #333333;
               -fx-font-weight: bold;
               -fx-padding: 7 14;
               -fx-font-size: 13;"
                        text="Личный кабинет"/>


                <Button fx:id="openPlannedListButton"
                        maxWidth="220"
                        prefHeight="41"
                        onAction="#onOpenPlannedListClick"
                        text="Планоавые платежи"
                        style="-fx-background-color: #FFFFFF;
               -fx-background-radius: 999;
               -fx-text-fill: #333333;
               -fx-font-weight: bold;
               -fx-padding: 7 14;
               -fx-font-size: 13;"/>

                <Button fx:id="categoryPlanButton"
                        maxWidth="220"
                        prefHeight="41"
                        onAction="#onOpenCategoryPlanClick"
                        graphicTextGap="8"
                        style="-fx-background-color: #FFFFFF;
               -fx-background-radius: 999;
               -fx-text-fill: #333333;
               -fx-font-weight: bold;
               -fx-padding: 7 14;
               -fx-font-size: 13;"
                        text="План по категориям"/>

                <Button fx:id="accountsButton"
                        maxWidth="220"
                        prefHeight="41"
                        onAction="#onOpenAccountsClick"
                        text="Счета"
                        style="-fx-background-color: #FFFFFF;
               -fx-background-radius: 999;
               -fx-text-fill: #333333;
               -fx-font-weight: bold;
               -fx-padding: 7 14;
               -fx-font-size: 13;"/>

            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Button fx:id="logoutButton"
                    maxWidth="Infinity"
                    onAction="#onLogoutClick"
                    graphicTextGap="8"
                    style="-fx-background-color: #FF4B55;
                           -fx-background-radius: 999;
                           -fx-text-fill: white;
                           -fx-font-weight: bold;
                           -fx-padding: 7 14;
                           -fx-font-size: 13;"
                    text="Выйти">
                <graphic>
                    <SVGPath content="
            M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z
