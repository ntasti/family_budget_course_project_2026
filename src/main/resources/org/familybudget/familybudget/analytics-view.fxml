<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.familybudget.familybudget.Controllers.AnalyticsController"
            style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <top>
        <VBox spacing="10">
            <Label text="Аналитика"
                   style="-fx-text-fill: #333333;">
                <font>
                    <Font name="Segoe UI Semibold" size="18"/>
                </font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Режим:"
                       style="-fx-text-fill: #555555;"/>

                <ComboBox fx:id="viewTypeCombo"
                          prefWidth="260"
                          style="-fx-background-radius: 999;
                                 -fx-background-color: #FFFFFF;
                                 -fx-border-color: #E5E7EB;
                                 -fx-border-radius: 999;"/>

                <Label text="Период:"
                       style="-fx-text-fill: #555555;"/>

                <DatePicker fx:id="fromDatePicker" promptText="с"/>
                <Label text="—" style="-fx-text-fill: #777777;"/>
                <DatePicker fx:id="toDatePicker" promptText="по"/>

                <Button text="Показать"
                        onAction="#onCalculateClick"
                        style="-fx-background-color: #4C6FFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 4 14;"/>
            </HBox>

            <Label fx:id="statusLabel"
                   style="-fx-text-fill: #D32F2F; -fx-font-size: 12;"/>
        </VBox>
    </top>

    <center>
        <StackPane>

            <PieChart fx:id="categoryPieChart"
                      legendVisible="true"
                      labelsVisible="true"/>

            <BarChart fx:id="planFactChart"
                      legendVisible="true"
                      animated="false">
                <xAxis>
                    <CategoryAxis label="Категория"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Сумма"/>
                </yAxis>
            </BarChart>

            <PieChart fx:id="importancePieChart"
                      legendVisible="true"
                      labelsVisible="true"
                      visible="false"
                      managed="false"/>

            <!-- Блок "Обзор по месяцам" -->
            <VBox fx:id="monthlyOverviewBox"
                  spacing="12"
                  visible="false"
                  managed="false">
                <padding>
                    <!-- Отступ вокруг блока обзора по месяцам -->
                    <Insets top="6" right="6" bottom="20" left="6"/>
                </padding>

                <Label text="Обзор по месяцам"
                       style="-fx-text-fill: #555555; -fx-font-weight: bold;"/>

                <ScrollPane fitToWidth="true"
                            hbarPolicy="NEVER"
                            vbarPolicy="AS_NEEDED"
                            prefHeight="420"
                            style="-fx-background-color: transparent;">
                    <content>
                        <VBox fx:id="monthlyCardsContainer"
                              spacing="10"
                              fillWidth="true">
                            <padding>
                                <!-- Внутренние отступы "рамки", где перечислены месяцы -->
                                <Insets top="10" right="8" bottom="14" left="8"/>
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>

        </StackPane>
    </center>

    <bottom>
        <VBox spacing="4">

            <padding>
                <Insets top="18" right="0" bottom="0" left="0"/>
            </padding>

            <Label fx:id="summaryLabel"
                   wrapText="true"
                   maxWidth="Infinity"
                   style="-fx-text-fill: #444444; -fx-font-size: 13;"/>
        </VBox>
    </bottom>

</BorderPane>
