<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.SVGPath?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.AccountsController"
      spacing="10"
      alignment="TOP_CENTER"
      prefWidth="420"
      prefHeight="360"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Заголовок + добавление счёта -->
    <HBox alignment="CENTER_LEFT" spacing="10" prefWidth="380">
        <Label text="Счета"
               style="-fx-text-fill: #222222;">
            <font>
                <Font name="Segoe UI Semibold" size="20"/>
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Кнопка добавления счёта (зелёный круг с плюсом) -->
        <Button onAction="#onAddClick"
                style="-fx-background-color: #4CAF50;
                       -fx-background-radius: 50;
                       -fx-min-width: 32;
                       -fx-min-height: 32;
                       -fx-max-width: 32;
                       -fx-max-height: 32;
                       -fx-padding: 0;">
            <graphic>
                <SVGPath content="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16
                           M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"
                         style="-fx-fill: #FFFFFF;"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Таблица счетов -->
    <TableView fx:id="accountsTable"
               prefWidth="380"
               prefHeight="220"
               style="-fx-background-color: #FFFFFF;
                      -fx-border-color: #DDDDDD;
                      -fx-border-radius: 10;
                      -fx-background-radius: 10;">
        <columns>
            <TableColumn fx:id="colName"     text="Название" prefWidth="220"/>
            <TableColumn fx:id="colCurrency" text="Валюта"   prefWidth="80"/>
        </columns>
    </TableView>

    <!-- Панель кнопок -->
    <HBox spacing="10" alignment="CENTER_RIGHT" prefWidth="380">

        <!-- СИНЯЯ кнопка ОБНОВИТЬ слева -->
        <Button text="Обновить"
                onAction="#onRefreshClick"
                style="-fx-background-color: #4C6FFF;
                       -fx-background-radius: 999;
                       -fx-text-fill: white;
                       -fx-font-family: 'Segoe UI';
                       -fx-font-weight: bold;
                       -fx-padding: 6 18;
                       -fx-font-size: 12;"/>

        <!-- Растягиваем пространство, чтобы остальные ушли вправо -->
        <Region HBox.hgrow="ALWAYS"/>

        <!-- СИНЯЯ кнопка ПЕРЕИМЕНОВАТЬ -->
        <Button text="Переименовать"
                onAction="#onEditClick"
                style="-fx-background-color: #4C6FFF;
                       -fx-background-radius: 999;
                       -fx-text-fill: white;
                       -fx-font-family: 'Segoe UI';
                       -fx-font-weight: bold;
                       -fx-padding: 6 18;
                       -fx-font-size: 12;"/>

        <!-- КРАСНАЯ кнопка УДАЛИТЬ -->
        <Button text="Удалить"
                onAction="#onDeleteClick"
                style="-fx-background-color: #FF4B55;
                       -fx-background-radius: 999;
                       -fx-text-fill: white;
                       -fx-font-family: 'Segoe UI';
                       -fx-font-weight: bold;
                       -fx-padding: 6 18;
                       -fx-font-size: 12;"/>

        <!-- СИНЯЯ кнопка ПЕРЕВОД -->
        <Button text="Перевод..."
                onAction="#onTransferClick"
                style="-fx-background-color: #4C6FFF;
                       -fx-background-radius: 999;
                       -fx-text-fill: white;
                       -fx-font-family: 'Segoe UI';
                       -fx-font-weight: bold;
                       -fx-padding: 6 18;
                       -fx-font-size: 12;"/>

        <!-- СЕРАЯ кнопка ЗАКРЫТЬ -->
        <Button text="Закрыть"
                onAction="#onCloseClick"
                style="-fx-background-color: #E0E0E0;
                       -fx-background-radius: 999;
                       -fx-text-fill: #333333;
                       -fx-font-family: 'Segoe UI';
                       -fx-font-weight: bold;
                       -fx-padding: 6 18;
                       -fx-font-size: 12;"/>
    </HBox>

    <Label fx:id="statusLabel"
           style="-fx-text-fill: #D32F2F; -fx-font-size: 11;"
           text=""/>

</VBox>
