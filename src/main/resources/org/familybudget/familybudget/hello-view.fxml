<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="10"
      prefWidth="420"
      prefHeight="340"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.LoginController"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <children>

        <!-- Карточка логина -->
        <VBox alignment="CENTER"
              spacing="16"
              prefWidth="360"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 16;
                     -fx-padding: 25 28 28 28;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 4);
                     -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label text="Авторизация"
                   style="-fx-text-fill: #222222;">
                <font>
                    <Font name="Segoe UI Semibold" size="22"/>
                </font>
            </Label>

            <!-- Логин -->
            <TextField fx:id="loginField"
                       promptText="Логин"
                       maxWidth="260"
                       style="-fx-background-color: #F5F5F5;
                              -fx-background-radius: 8;
                              -fx-border-color: #DDDDDD;
                              -fx-border-radius: 8;
                              -fx-text-fill: #222222;
                              -fx-prompt-text-fill: #999999;
                              -fx-padding: 8 12;
                              -fx-font-size: 13;"/>

            <!-- Пароль -->
            <PasswordField fx:id="passwordField"
                           promptText="Пароль"
                           maxWidth="260"
                           style="-fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #999999;
                                  -fx-padding: 8 12;
                                  -fx-font-size: 13;"/>

            <!-- Войти -->
            <Button fx:id="loginButton"
                    defaultButton="true"
                    maxWidth="260"
                    onAction="#onLoginClick"
                    text="Войти"
                    style="-fx-background-color: #4C6FFF;
                           -fx-background-radius: 999;
                           -fx-text-fill: #FFFFFF;
                           -fx-font-size: 14;
                           -fx-font-weight: bold;
                           -fx-padding: 8 0;">
                <font>
                    <Font name="Segoe UI Semibold" size="14"/>
                </font>
            </Button>

            <!-- Регистрация -->
            <Button text="Регистрация"
                    onAction="#onRegisterClick"
                    maxWidth="260"
                    style="-fx-background-color: #E0E0E0;
                           -fx-background-radius: 999;
                           -fx-text-fill: #333333;
                           -fx-font-weight: bold;
                           -fx-font-size: 14;
                           -fx-padding: 8 0;">
                <font>
                    <Font name="Segoe UI Semibold" size="14"/>
                </font>
            </Button>

            <!-- Статус -->
            <Label fx:id="statusLabel"
                   text=""
                   style="-fx-text-fill: #D32F2F;
                          -fx-font-size: 11;"/>

        </VBox>

    </children>
</VBox>
