<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER"
      prefHeight="560.0"
      prefWidth="580.0"
      spacing="19"
      style="-fx-background-color: #F2F3F7;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.RegisterController">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <children>

        <!-- Внутренняя карточка регистрации -->
        <VBox alignment="TOP_CENTER"
              prefHeight="460.0"
              prefWidth="420.0"
              spacing="12"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 16;
                     -fx-padding: 18 20 20 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 18, 0, 0, 4);
                     -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label text="Регистрация"
                   style="-fx-text-fill: #222222;">
                <font>
                    <Font name="Segoe UI Semibold" size="20"/>
                </font>
            </Label>

            <!-- Подзаголовок -->
            <Label text="Создайте аккаунт и присоединитесь к семейному бюджету"
                   wrapText="true"
                   style="-fx-text-fill: #777777; -fx-font-size: 11;"/>

            <!-- Блок логина и пароля -->
            <VBox prefWidth="360" spacing="8">

                <TextField fx:id="loginField"
                           promptText="Email / логин"
                           style="-fx-pref-width: 360;
                                  -fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #9E9E9E;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>

                <PasswordField fx:id="passwordField"
                               promptText="Пароль"
                               style="-fx-pref-width: 360;
                                      -fx-background-color: #F5F5F5;
                                      -fx-background-radius: 8;
                                      -fx-text-fill: #222222;
                                      -fx-prompt-text-fill: #9E9E9E;
                                      -fx-border-color: #DDDDDD;
                                      -fx-border-radius: 8;
                                      -fx-padding: 6 10 6 10;"/>

                <PasswordField fx:id="confirmPasswordField"
                               promptText="Повторите пароль"
                               style="-fx-pref-width: 360;
                                      -fx-background-color: #F5F5F5;
                                      -fx-background-radius: 8;
                                      -fx-text-fill: #222222;
                                      -fx-prompt-text-fill: #9E9E9E;
                                      -fx-border-color: #DDDDDD;
                                      -fx-border-radius: 8;
                                      -fx-padding: 6 10 6 10;"/>
            </VBox>

            <!-- Блок семьи -->
            <Label text="Семья"
                   style="-fx-text-fill: #555555; -fx-font-size: 12; -fx-padding: 10 0 0 0;"/>

            <VBox prefWidth="360" spacing="6">

                <!-- Создать семью -->
                <RadioButton fx:id="createFamilyRadio"
                             text="Создать новую семью"
                             style="-fx-text-fill: #222222; -fx-font-size: 12;"/>

                <TextField fx:id="familyNameField"
                           promptText="Название семьи"
                           style="-fx-pref-width: 360;
                                  -fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #9E9E9E;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>

                <!-- Присоединиться по коду -->
                <RadioButton fx:id="joinFamilyRadio"
                             text="Присоединиться по коду XX-XXXX"
                             style="-fx-text-fill: #222222; -fx-font-size: 12;"/>

                <TextField fx:id="familyCodeField"
                           promptText="Код семьи"
                           style="-fx-pref-width: 360;
                                  -fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #9E9E9E;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>
            </VBox>

            <!-- Кнопки -->
            <HBox alignment="CENTER_RIGHT"
                  prefWidth="360"
                  spacing="10"
                  style="-fx-padding: 10 0 0 0;">

                <Button text="Отмена"
                        onAction="#onCancelClick"
                        style="-fx-background-color: #E0E0E0;
                               -fx-background-radius: 999;
                               -fx-text-fill: #333333;
                               -fx-font-weight: bold;
                               -fx-padding: 6 16;
                               -fx-font-size: 12;"/>

                <Button text="Зарегистрироваться"
                        onAction="#onRegisterClick"
                        style="-fx-background-color: #4C6FFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 6 18;
                               -fx-font-size: 12;"/>
            </HBox>

            <!-- Статус -->
            <Label fx:id="statusLabel"
                   text=""
                   style="-fx-text-fill: #D32F2F; -fx-font-size: 11; -fx-padding: 4 0 0 0;"/>

        </VBox>
    </children>
</VBox>
