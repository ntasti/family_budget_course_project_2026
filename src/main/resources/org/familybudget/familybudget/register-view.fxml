<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER"
      spacing="10"
      prefWidth="460"
      prefHeight="460"
      style="-fx-background-color: #121212;"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.RegisterController">

    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>

    <children>

        <!-- Внутренняя карточка регистрации -->
        <VBox alignment="TOP_CENTER"
              spacing="12"
              prefWidth="420"
              style="-fx-background-color: #1E1E1E;
                     -fx-background-radius: 16;
                     -fx-padding: 18 20 20 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 18, 0, 0, 4);
                     -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label text="Регистрация"
                   style="-fx-text-fill: #FFFFFF;">
                <font>
                    <Font name="Segoe UI Semibold" size="20"/>
                </font>
            </Label>

            <!-- Подзаголовок -->
            <Label text="Создайте аккаунт и присоединитесь к семейному бюджету"
                   wrapText="true"
                   style="-fx-text-fill: #888888; -fx-font-size: 11;"/>

            <!-- Блок логина и пароля -->
            <VBox spacing="8" prefWidth="360">

                <TextField fx:id="loginField"
                           promptText="Email / логин"
                           style="-fx-pref-width: 360;
                                  -fx-background-color: #2B2B2B;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #FFFFFF;
                                  -fx-prompt-text-fill: #8A8A8A;
                                  -fx-border-color: transparent;
                                  -fx-padding: 6 10 6 10;"/>

                <PasswordField fx:id="passwordField"
                               promptText="Пароль"
                               style="-fx-pref-width: 360;
                                      -fx-background-color: #2B2B2B;
                                      -fx-background-radius: 8;
                                      -fx-text-fill: #FFFFFF;
                                      -fx-prompt-text-fill: #8A8A8A;
                                      -fx-border-color: transparent;
                                      -fx-padding: 6 10 6 10;"/>

                <PasswordField fx:id="confirmPasswordField"
                               promptText="Повторите пароль"
                               style="-fx-pref-width: 360;
                                      -fx-background-color: #2B2B2B;
                                      -fx-background-radius: 8;
                                      -fx-text-fill: #FFFFFF;
                                      -fx-prompt-text-fill: #8A8A8A;
                                      -fx-border-color: transparent;
                                      -fx-padding: 6 10 6 10;"/>
            </VBox>

            <!-- Блок семьи -->
            <Label text="Семья"
                   style="-fx-text-fill: #CCCCCC; -fx-font-size: 12; -fx-padding: 10 0 0 0;"/>

            <VBox spacing="6" prefWidth="360">

                <!-- Создать семью -->
                <RadioButton fx:id="createFamilyRadio"
                             text="Создать новую семью"
                             style="-fx-text-fill: #FFFFFF; -fx-font-size: 12;"/>

                <TextField fx:id="familyNameField"
                           promptText="Название семьи"
                           style="-fx-pref-width: 360;
                                  -fx-background-color: #2B2B2B;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #FFFFFF;
                                  -fx-prompt-text-fill: #8A8A8A;
                                  -fx-border-color: transparent;
                                  -fx-padding: 6 10 6 10;"/>

                <!-- Присоединиться по коду -->
                <RadioButton fx:id="joinFamilyRadio"
                             text="Присоединиться по коду XX-XXXX"
                             style="-fx-text-fill: #FFFFFF; -fx-font-size: 12;"/>

                <TextField fx:id="familyCodeField"
                           promptText="Код семьи"
                           style="-fx-pref-width: 360;
                                  -fx-background-color: #2B2B2B;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #FFFFFF;
                                  -fx-prompt-text-fill: #8A8A8A;
                                  -fx-border-color: transparent;
                                  -fx-padding: 6 10 6 10;"/>
            </VBox>

            <!-- Кнопки -->
            <HBox spacing="10"
                  alignment="CENTER_RIGHT"
                  prefWidth="360"
                  style="-fx-padding: 10 0 0 0;">

                <Button text="Отмена"
                        onAction="#onCancelClick"
                        style="-fx-background-color: #444444;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-padding: 6 16;
                               -fx-font-size: 12;"/>

                <Button text="Зарегистрироваться"
                        onAction="#onRegisterClick"
                        style="-fx-background-color: #4C6FFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-padding: 6 18;
                               -fx-font-size: 12;"/>
            </HBox>

            <!-- Статус -->
            <Label fx:id="statusLabel"
                   text=""
                   style="-fx-text-fill: #FF7070; -fx-font-size: 11; -fx-padding: 4 0 0 0;"/>

        </VBox>
    </children>
</VBox>
