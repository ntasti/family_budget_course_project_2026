<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="559.0" prefWidth="568.0" spacing="19" style="-fx-background-color: #121212;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.RegisterController">

    <padding>
        <Insets bottom="25" left="25" right="25" top="25"/>
    </padding>

    <children>

        <!-- Внутренняя карточка регистрации -->
        <VBox alignment="TOP_CENTER" prefHeight="453.0" prefWidth="402.0" spacing="12"
              style="-fx-background-color: #1E1E1E;                      -fx-background-radius: 16;                      -fx-padding: 18 20 20 20;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 18, 0, 0, 4);                      -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label style="-fx-text-fill: #FFFFFF;" text="Регистрация">
                <font>
                    <Font name="Segoe UI Semibold" size="20"/>
                </font>
            </Label>

            <!-- Подзаголовок -->
            <Label style="-fx-text-fill: #888888; -fx-font-size: 11;"
                   text="Создайте аккаунт и присоединитесь к семейному бюджету" wrapText="true"/>

            <!-- Блок логина и пароля -->
            <VBox prefWidth="360" spacing="8">

                <TextField fx:id="loginField" promptText="Email / логин"
                           style="-fx-pref-width: 360;                                   -fx-background-color: #2B2B2B;                                   -fx-background-radius: 8;                                   -fx-text-fill: #FFFFFF;                                   -fx-prompt-text-fill: #8A8A8A;                                   -fx-border-color: transparent;                                   -fx-padding: 6 10 6 10;"/>

                <PasswordField fx:id="passwordField" promptText="Пароль"
                               style="-fx-pref-width: 360;                                       -fx-background-color: #2B2B2B;                                       -fx-background-radius: 8;                                       -fx-text-fill: #FFFFFF;                                       -fx-prompt-text-fill: #8A8A8A;                                       -fx-border-color: transparent;                                       -fx-padding: 6 10 6 10;"/>

                <PasswordField fx:id="confirmPasswordField" promptText="Повторите пароль"
                               style="-fx-pref-width: 360;                                       -fx-background-color: #2B2B2B;                                       -fx-background-radius: 8;                                       -fx-text-fill: #FFFFFF;                                       -fx-prompt-text-fill: #8A8A8A;                                       -fx-border-color: transparent;                                       -fx-padding: 6 10 6 10;"/>
            </VBox>

            <!-- Блок семьи -->
            <Label style="-fx-text-fill: #CCCCCC; -fx-font-size: 12; -fx-padding: 10 0 0 0;" text="Семья"/>

            <VBox prefWidth="360" spacing="6">

                <!-- Создать семью -->
                <RadioButton fx:id="createFamilyRadio" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12;"
                             text="Создать новую семью"/>

                <TextField fx:id="familyNameField" promptText="Название семьи"
                           style="-fx-pref-width: 360;                                   -fx-background-color: #2B2B2B;                                   -fx-background-radius: 8;                                   -fx-text-fill: #FFFFFF;                                   -fx-prompt-text-fill: #8A8A8A;                                   -fx-border-color: transparent;                                   -fx-padding: 6 10 6 10;"/>

                <!-- Присоединиться по коду -->
                <RadioButton fx:id="joinFamilyRadio" style="-fx-text-fill: #FFFFFF; -fx-font-size: 12;"
                             text="Присоединиться по коду XX-XXXX"/>

                <TextField fx:id="familyCodeField" promptText="Код семьи"
                           style="-fx-pref-width: 360;                                   -fx-background-color: #2B2B2B;                                   -fx-background-radius: 8;                                   -fx-text-fill: #FFFFFF;                                   -fx-prompt-text-fill: #8A8A8A;                                   -fx-border-color: transparent;                                   -fx-padding: 6 10 6 10;"/>
            </VBox>

            <!-- Кнопки -->
            <HBox alignment="CENTER_RIGHT" prefWidth="360" spacing="10" style="-fx-padding: 10 0 0 0;">

                <Button onAction="#onCancelClick"
                        style="-fx-background-color: #444444;                                -fx-background-radius: 999;                                -fx-text-fill: white;                                -fx-padding: 6 16;                                -fx-font-size: 12;"
                        text="Отмена"/>

                <Button onAction="#onRegisterClick"
                        style="-fx-background-color: #4C6FFF;                                -fx-background-radius: 999;                                -fx-text-fill: white;                                -fx-padding: 6 18;                                -fx-font-size: 12;"
                        text="Зарегистрироваться"/>
            </HBox>

            <!-- Статус -->
            <Label fx:id="statusLabel" style="-fx-text-fill: #FF7070; -fx-font-size: 11; -fx-padding: 4 0 0 0;"
                   text=""/>

        </VBox>
    </children>
</VBox>
