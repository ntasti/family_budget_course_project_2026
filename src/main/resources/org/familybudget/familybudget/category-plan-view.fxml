<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.CategoryPlanController"
      spacing="10"
      alignment="TOP_CENTER"
      prefWidth="460"
      prefHeight="360"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <!-- Внутренняя карточка -->
        <VBox alignment="TOP_CENTER"
              spacing="12"
              prefWidth="420"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 16;
                     -fx-padding: 18 20 20 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 4);
                     -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label text="План по категориям"
                   style="-fx-text-fill: #222222;">
                <font>
                    <Font name="Segoe UI Semibold" size="20"/>
                </font>
            </Label>

            <!-- Подзаголовок -->
            <Label text="Установите плановую сумму расходов по выбранной категории и периоду."
                   wrapText="true"
                   style="-fx-text-fill: #777777; -fx-font-size: 11;"/>

            <VBox spacing="8" prefWidth="360">

                <!-- Категория -->
                <Label text="Категория"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>
                <ComboBox fx:id="categoryComboBox"
                          promptText="Выберите категорию"
                          prefWidth="360"
                          style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-text-fill: #222222;
                                 -fx-prompt-text-fill: #999999;
                                 -fx-border-color: #DDDDDD;
                                 -fx-border-radius: 8;
                                 -fx-padding: 6 10 6 10;"/>

                <!-- Период -->
                <Label text="Период"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>
                <HBox spacing="6">
                    <DatePicker fx:id="fromDatePicker"
                                promptText="с"
                                prefWidth="170"
                                style="-fx-background-radius: 8;"/>

                    <Label text="—" style="-fx-text-fill:#777777;"/>

                    <DatePicker fx:id="toDatePicker"
                                promptText="по"
                                prefWidth="170"
                                style="-fx-background-radius: 8;"/>
                </HBox>

                <!-- Сумма -->
                <Label text="Плановая сумма (BYN)"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>
                <TextField fx:id="amountField"
                           promptText="Например: 300.00"
                           prefWidth="360"
                           style="-fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #999999;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>

            </VBox>

            <!-- Кнопки -->
            <HBox spacing="10"
                  alignment="CENTER_RIGHT"
                  prefWidth="360"
                  style="-fx-padding: 6 0 0 0;">

                <Button text="Отмена"
                        onAction="#onCancelClick"
                        style="-fx-background-color: #E0E0E0;
                               -fx-background-radius: 999;
                               -fx-text-fill: #333333;
                               -fx-font-weight: bold;
                               -fx-padding: 5 16;"/>

                <Button text="Сохранить план"
                        onAction="#onSaveClick"
                        style="-fx-background-color: #4C6FFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 5 18;"/>
            </HBox>

            <!-- Статус -->
            <Label fx:id="statusLabel"
                   style="-fx-text-fill: #D32F2F; -fx-font-size: 11;"
                   text=""/>

        </VBox>
    </children>
</VBox>
