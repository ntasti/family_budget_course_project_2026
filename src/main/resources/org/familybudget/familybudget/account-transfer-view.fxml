<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.AccountTransferController"
      spacing="10"
      alignment="TOP_CENTER"
      prefWidth="420"
      prefHeight="280"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Перевод между счетами"
           style="-fx-text-fill: #222;">
        <font>
            <Font name="Segoe UI Semibold" size="18"/>
        </font>
    </Label>

    <GridPane hgap="10" vgap="8">
        <columnConstraints>
            <ColumnConstraints prefWidth="130"/>
            <ColumnConstraints prefWidth="240"/>
        </columnConstraints>

        <Label text="Счёт-источник:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="fromAccountCombo" prefWidth="220"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Счёт-получатель:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="toAccountCombo" prefWidth="220"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Сумма:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" prefWidth="120"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Комментарий:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextArea fx:id="commentArea" prefRowCount="3"
                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT" prefWidth="380">
        <Button text="Перевести"
                onAction="#onDoTransferClick"
                style="-fx-background-color: #4CAF50;
                       -fx-background-radius: 999;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-padding: 5 14;"/>

        <Button text="Отмена"
                onAction="#onCancelClick"
                style="-fx-background-color: #E0E0E0;
                       -fx-background-radius: 999;
                       -fx-text-fill: #333;
                       -fx-font-weight: bold;
                       -fx-padding: 5 14;"/>
    </HBox>

    <Label fx:id="statusLabel"
           style="-fx-text-fill: #D32F2F; -fx-font-size: 11;" text=""/>

</VBox>
