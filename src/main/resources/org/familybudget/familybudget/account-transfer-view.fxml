<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.familybudget.familybudget.Controllers.AccountTransferController"
      alignment="CENTER"
      spacing="10"
      prefWidth="460"
      prefHeight="320"
      style="-fx-background-color: #F0F2F5;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <children>

        <!-- Внутренняя карточка -->
        <VBox alignment="TOP_CENTER"
              spacing="14"
              prefWidth="420"
              style="-fx-background-color: #FFFFFF;
                     -fx-background-radius: 16;
                     -fx-padding: 18 20 20 20;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 18, 0, 0, 4);
                     -fx-font-family: 'Segoe UI';">

            <!-- Заголовок -->
            <Label text="Перевод между счетами"
                   style="-fx-text-fill: #222222;">
                <font>
                    <Font name="Segoe UI Semibold" size="20"/>
                </font>
            </Label>

            <!-- Подзаголовок -->
            <Label text="Выберите счета и сумму, при необходимости добавьте комментарий."
                   wrapText="true"
                   style="-fx-text-fill: #777777; -fx-font-size: 11;"/>

            <!-- Форма -->
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="130"/>
                    <ColumnConstraints prefWidth="260"/>
                </columnConstraints>

                <!-- Счёт-источник -->
                <Label text="Счёт-источник:"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="0"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>

                <ComboBox fx:id="fromAccountCombo"
                          prefWidth="240"
                          promptText="Выберите счёт"
                          GridPane.rowIndex="0"
                          GridPane.columnIndex="1"
                          style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-text-fill: #222222;
                                 -fx-prompt-text-fill: #999999;
                                 -fx-border-color: #DDDDDD;
                                 -fx-border-radius: 8;
                                 -fx-padding: 6 10 6 10;"/>

                <!-- Счёт-получатель -->
                <Label text="Счёт-получатель:"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="0"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>

                <ComboBox fx:id="toAccountCombo"
                          prefWidth="240"
                          promptText="Выберите счёт"
                          GridPane.rowIndex="1"
                          GridPane.columnIndex="1"
                          style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-text-fill: #222222;
                                 -fx-prompt-text-fill: #999999;
                                 -fx-border-color: #DDDDDD;
                                 -fx-border-radius: 8;
                                 -fx-padding: 6 10 6 10;"/>

                <!-- Сумма -->
                <Label text="Сумма"
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="0"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>

                <TextField fx:id="amountField"
                           prefWidth="140"
                           promptText="Например: 150.00"
                           GridPane.rowIndex="2"
                           GridPane.columnIndex="1"
                           style="-fx-background-color: #F5F5F5;
                                  -fx-background-radius: 8;
                                  -fx-text-fill: #222222;
                                  -fx-prompt-text-fill: #999999;
                                  -fx-border-color: #DDDDDD;
                                  -fx-border-radius: 8;
                                  -fx-padding: 6 10 6 10;"/>

                <!-- Комментарий -->
                <Label text="Комментарий"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="0"
                       style="-fx-text-fill: #555555; -fx-font-size: 12;"/>

                <TextArea fx:id="commentArea"
                          prefRowCount="3"
                          prefWidth="240"
                          wrapText="true"
                          promptText="Например: перевод на накопительный счёт"
                          GridPane.rowIndex="3"
                          GridPane.columnIndex="1"
                          style="-fx-background-color: #F5F5F5;
                                 -fx-background-radius: 8;
                                 -fx-text-fill: #222222;
                                 -fx-prompt-text-fill: #999999;
                                 -fx-border-color: #DDDDDD;
                                 -fx-border-radius: 8;
                                 -fx-padding: 6 10 6 10;"/>
            </GridPane>

            <!-- Кнопки -->
            <HBox spacing="10"
                  alignment="CENTER_RIGHT"
                  prefWidth="380"
                  style="-fx-padding: 6 0 0 0;">

                <Button text="Отмена"
                        onAction="#onCancelClick"
                        style="-fx-background-color: #E0E0E0;
                               -fx-background-radius: 999;
                               -fx-text-fill: #333333;
                               -fx-font-weight: bold;
                               -fx-padding: 5 18;
                               -fx-font-size: 12;"/>

                <Button text="Перевести"
                        onAction="#onDoTransferClick"
                        style="-fx-background-color: #4C6FFF;
                               -fx-background-radius: 999;
                               -fx-text-fill: white;
                               -fx-font-weight: bold;
                               -fx-padding: 5 20;
                               -fx-font-size: 12;"/>
            </HBox>

            <!-- Статус -->
            <Label fx:id="statusLabel"
                   style="-fx-text-fill: #D32F2F; -fx-font-size: 11;"
                   text=""/>

        </VBox>
    </children>
</VBox>
